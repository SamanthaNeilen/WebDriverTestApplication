@model CustomerModel
@using (Html.BeginForm("Save", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="modal-header">
        <h3 id="addCustomerHeader" class="modal-title">@Labels.AddCustomer</h3>
    </div>
    <div class="modal-body">
        <input name="@nameof(Model.Id)" type="hidden" value="@Model.Id" class="control-label" />
        <div class="form-group">
            <label class="control-label">@Html.DisplayNameFor(model => model.Name)</label>
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div class="form-group">
            <label class="control-label">@Html.DisplayNameFor(model => model.EmailAddress)</label>
            @Html.TextBoxFor(model => model.EmailAddress, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.EmailAddress)
        </div>
        <div class="form-group">
            <label class="control-label">@Html.DisplayNameFor(model => model.PhoneNumber)</label>
            @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.PhoneNumber)
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">@Labels.Save</button>
    </div>
}
